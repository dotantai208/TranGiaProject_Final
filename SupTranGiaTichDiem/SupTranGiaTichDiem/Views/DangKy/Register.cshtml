@model SupTranGiaTichDiem.Models.Account

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Đăng ký";
}

<section class="">
    <div class="container py-3 ">
        <div class="row d-flex justify-content-center align-items-center"  >
            <div class="col col-xxl-11" >
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0" >
                        <div class="col-md-7 col-lg-5" >
                            <img src="~/img/welcome.png"
                                 alt="register form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-5 col-lg-7 d-flex align-items-center " >
                            <div class="card-body p-4 p-lg-3 text-black">
                              
                                @using (Html.BeginForm("DangKyAcc", "DangKy", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <h3 class="text-bg-warning text-center p-1">ĐĂNG KÝ</h3>
                                
                                    <div class="mb-3">
                                        <label class="form-label" for="phone">Số điện thoại</label>
                                        @Html.TextBoxFor(m => m.phone, new { @class = "form-control form-control-lg" })
                                     
                                    <p>
                                        @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                                    </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="password">Mật khẩu</label>
                                        @Html.PasswordFor(m => m.password, new { @class = "form-control form-control-lg" })
                                    <p>
                                        @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                                    </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="fullname">Họ và tên</label>
                                        @Html.TextBoxFor(m => m.fullname, new { @class = "form-control form-control-lg" })
                                    <p>
                                        @Html.ValidationMessageFor(m => m.fullname, "", new { @class = "text-danger" })
                                    </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="birthday">Ngày sinh</label>
                                        @Html.TextBoxFor(m => m.birthday, new { @class = "form-control form-control-lg", type = "date" })
                                    <p>
                                        @Html.ValidationMessageFor(m => m.birthday, "", new { @class = "text-danger" })
                                    </p>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="email">Email</label>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", type = "email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="branch">Khu vực</label>
                                        @Html.DropDownListFor(m => m.Branch, (SelectList)ViewBag.BranchList, new { @class = "form-control form-control-lg" })
                                    <p>
                                        @Html.ValidationMessageFor(m => m.Branch, "", new { @class = "text-danger" })
                                    </p>
                                    </div>

                                    <div class="pt-1 mb-3">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Đăng ký</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
