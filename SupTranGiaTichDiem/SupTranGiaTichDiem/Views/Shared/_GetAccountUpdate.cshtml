@model SupTranGiaTichDiem.Models.Account

<div class="modal-body">
    @Html.HiddenFor(m => m.acc_id)
    <div class="col-12 mb-3">
        <label for="modalPhone" class="form-label">Số điện thoại</label>
        @Html.TextBoxFor(m => m.phone, new { @class = "form-control", placeholder = "Nhập số điện thoại", required = "required" })
        @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
    </div>
    <div class="col-12 mb-3">
        <label class="form-label" for="fullname">Họ và tên</label>
        @Html.TextBoxFor(m => m.fullname, new { @class = "form-control form-control-lg" })
        @Html.ValidationMessageFor(m => m.fullname, "", new { @class = "text-danger" })
    </div>
    <div class="col mb-0">
        <label for="editEmailAcc" class="form-label">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "xxxx@xxx.xx", required = "required" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="row g-2">
        <div class="col mb-0">
            <label for="editDateAcc" class="form-label">Ngày sinh</label>
            @Html.TextBoxFor(m => m.birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.birthday, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="mt-3">
        <label for="editBranch" class="form-label">Khu vực</label>
        @Html.DropDownListFor(m => m.Branch, new SelectList(ViewBag.branch, "Branch_id", "Branch_Name"), "Chọn khu vực", new { @class = "select2 form-select" })
        @Html.ValidationMessageFor(m => m.Branch, "", new { @class = "text-danger" })
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Thoát</button>
        <button type="submit" class="btn btn-warning">Cập nhật</button>
    </div>
</div>

