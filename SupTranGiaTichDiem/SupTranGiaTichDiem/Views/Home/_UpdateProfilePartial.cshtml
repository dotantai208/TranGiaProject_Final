@model SupTranGiaTichDiem.Models.Account

@using (Html.BeginForm("UpdateProfile", "Home", FormMethod.Post, new { id = "updateProfileForm", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.phone, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.fullname, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.fullname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.fullname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.birthday, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.birthday, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.birthday, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Branch, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Branch", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Branch, "", new { @class = "text-danger" })
        </div>
    </div>
}
